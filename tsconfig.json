{
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "target": "es6",
    "module":"commonJS",
    "lib": ["es5", "es6"],
    "declarationMap": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
